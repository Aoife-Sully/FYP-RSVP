<div class="container" style="align-content:center">

    @* Couple/Guest Login*@
    <div id="LoginForm" style="width: 525px; height:450px; background:#F69D9D; margin:10px">
        <br />

        <h3 id="Login">Welcome back! Please log in </h3>

        <br />

        <label for="EmailAddress">Email Address</label>
        <input type="text" placeholder="Email Address" name="EmailAddress" id="EmailAddress" />
        <br />

        <label for="Password">Password</label>
        <input type="password" placeholder="Password" name="Password" id="Password" />
        <br />

        <button type="submit">Log In</button>
    </div>

